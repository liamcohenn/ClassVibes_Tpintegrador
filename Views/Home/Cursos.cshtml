@{
    ViewData["Title"] = "Cursos";
}

<div class="filters-container">
    <form method="get" action="/Home/Profesores" class="filters-form">
        <!-- Filtro de Valoraciones -->
        <div class="filter-section">
            <h3>Valoraciones</h3>
            <div>
                <input type="radio" id="rating4" name="rating" value="4">
                <label for="rating4">★★★★ 4 o más</label>
            </div>
            <div>
                <input type="radio" id="rating3" name="rating" value="3">
                <label for="rating3">★★★ 3 o más</label>
            </div>
            <div>
                <input type="radio" id="rating2" name="rating" value="2">
                <label for="rating2">★★ 2 o más</label>
            </div>
        </div>

        <!-- Filtro de Popularidad -->
        <div class="filter-section">
            <h3>Año de secundario</h3>
            <div>
                <input type="radio" id="quintoAño" name="año">
                <label for="quintoAño">Quinto año</label>
            </div>
            <div>
                <input type="radio" id="cuartoAño" name="año">
                <label for="cuartoAño">Cuarto año</label>
            </div>
            <div>
                <input type="radio" id="tercerAño" name="año">
                <label for="tercerAño">Tercer año</label>
            </div>
        </div>

        <!-- Filtro de Materias -->
        <div class="filter-section">
            <h3>Materias</h3>
            <div>
                <input type="checkbox" id="subjectMath" name="subject" value="Matematica">
                <label for="subjectMath">Matemática</label>
            </div>
            <div>
                <input type="checkbox" id="subjectPhysics" name="subject" value="Fisica">
                <label for="subjectPhysics">Física</label>
            </div>
            <div>
                <input type="checkbox" id="subjectProgramming" name="subject" value="Programacion">
                <label for="subjectProgramming">Programación</label>
            </div>
        </div>

        <!-- Botón de filtro -->
        <div class="filter-actions">
            <button type="submit">Aplicar filtros</button>
        </div>
    </form>
</div>

<main class="main-cursos">
    @foreach (var curso in ViewBag.Cursos)
    {
        <div class="curso-card">
            <!-- Imagen del curso -->
            <img src="@curso.fotoCurso" alt="@curso.Materia" class="curso-imagen">

            <!-- Detalle del curso -->
            <div class="curso-detalle">
                <!-- Materia y descripción -->
                <h4>@curso.Nombre</h4>
                <p>@curso.Descripcion</p>

                <!-- Valoración debajo de la imagen -->
                <p class="valoracion">Valoración: ★ @curso.Valoracion</p>

                <!-- Precio y botón -->
                <p class="precio">@curso.Precio $US</p>
                <ul class="btn-comprar">
                    <a href="@Url.Action("ComprarCurso", "Home")">Comprar Curso</a>
                </ul>
            </div>>
        </div>
    }
</main>
   