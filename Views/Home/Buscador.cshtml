@{
    ViewData["Title"] = "Buscador";
}
<div class="mt-5">

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }
    @if (ViewBag.Cursos != null && ViewBag.Cursos.Count > 0)
    {
        <h2 class="text-center">Resultados de búsqueda Por Cursos: @ViewBag.Query</h2>
    }
    else
    {
        <h2 class="text-center">No se encontraron resultados en cursos</h2>
    }
    @if (ViewBag.Cursos != null)
    {
      <div class="row">

        @foreach (var curso in ViewBag.Cursos)
        {
            <div class="col-md-4 col-12">
                <div class="card" style="height: 400px;border-radius: 16px;">
                    <div class="px-4 py-3 text-center">
                        <img src="@curso.fotoCurso" alt="@curso.Materia" style="height: 100px; width: 100px; border-radius: 50%; object-fit: cover;" />
                        <br>
                        
                        <a href="/Home/ComprarCurso?idCurso=@curso.idCurso" class="card-subtitle my-2 text-muted">@curso.Nombre</a>
                        <p class="card-text">@curso.Descripcion</p>
                    </div>
                </div>
            </div>
        }
      </div>
    }

    @if (ViewBag.Profesores != null && ViewBag.Profesores.Count > 0)
    {
        <h2 class="text-center">Resultados de búsqueda por Profesores: @ViewBag.Query</h2>
    }
    else
    {
        <h2 class="text-center">No se encontraron resultados en profesores</h2>
    }
    @if (ViewBag.Profesores != null)
    {
      <div class="row">

        @foreach (var profesor in ViewBag.Profesores)
        {
          <div class="col-md-4 row mb-4">
            <div class="profesor-foto-card col-4 mx-4" style="height: 200px;width: 200px;">
                <img src="@profesor.fotoPerfil" alt="Foto de @profesor.Nombre" style="width: 100%;height: 100%;border-radius: 50%;object-fit: cover;">
            </div>
            <div class="profesor-info-card col-8">
                <h5>Nombre: @profesor.Nombre</h5>
                <p>Materia: @profesor.Materia</p>
                <p>Calificación: @profesor.Valoracion/5</p>
                <p>Cursos dictados: @profesor.CantCursos</p>
                <p>Estudiantes: @profesor.CantAlumnos</p>
            </div>
          </div>
        }
      </div>
    }

</div>