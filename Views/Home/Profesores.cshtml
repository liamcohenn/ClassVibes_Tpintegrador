@{
    ViewData["Title"] = "Profesores";
}

<div class="filters-container">
    <form method="get" action="/Home/Profesores" class="filters-form">
        <!-- Filtro de Valoraciones -->
        <div class="filter-section">
            <h3>Valoraciones</h3>
            <div>
                <input type="radio" id="rating4" name="rating" value="4">
                <label for="rating4">4 o más ★★★★</label>
            </div>
            <div>
                <input type="radio" id="rating3" name="rating" value="3">
                <label for="rating3">3 o más ★★★</label>
            </div>
            <div>
                <input type="radio" id="rating2" name="rating" value="2">
                <label for="rating2">2 o más ★★</label>
            </div>
        </div>

        <!-- Filtro de Popularidad -->
        <div class="filter-section">
            <h3>Mas populares</h3>
            <div>
                <input type="radio" id="popularity1M" name="popularity" value="1000000">
                <label for="popularity1M">+1.000.000 búsquedas</label>
            </div>
            <div>
                <input type="radio" id="popularity500K" name="popularity" value="500000">
                <label for="popularity500K">+500.000 búsquedas</label>
            </div>
            <div>
                <input type="radio" id="popularity100K" name="popularity" value="100000">
                <label for="popularity100K">+100.000 búsquedas</label>
            </div>
        </div>

        <!-- Filtro de Materias -->
        <div class="filter-section">
            <h3>Materias</h3>
            <div>
                <input type="checkbox" id="subjectMath" name="subject" value="Matematica">
                <label for="subjectMath">Matemática</label>
            </div>
            <div>
                <input type="checkbox" id="subjectPhysics" name="subject" value="Fisica">
                <label for="subjectPhysics">Física</label>
            </div>
            <div>
                <input type="checkbox" id="subjectProgramming" name="subject" value="Programacion">
                <label for="subjectProgramming">Programación</label>
            </div>
        </div>

        <!-- Botón de filtro -->
        <div class="filter-actions">
            <button type="submit">Aplicar filtros</button>
        </div>
    </form>
</div>

    @foreach (var profesor in ViewBag.Profesores)
    {
        <div class="col-md-4">
            <div class="profesor-foto-card">
                <img src="@profesor.fotoPerfil" alt="Foto de @profesor.Nombre">
            </div>
            <div class="profesor-info-card">
                <h5>Nombre: @profesor.Nombre</h5>
                <p>Materia: @profesor.Materia</p>
                <p>Calificación: @profesor.Valoracion/5</p>
                <p>Cursos dictados: @profesor.CantCursos</p>
                <p>Estudiantes: @profesor.CantAlumnos</p>
            </div>
        </div>
        
    }
