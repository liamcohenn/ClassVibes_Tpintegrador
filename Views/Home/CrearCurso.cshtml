@{
    ViewData["Title"] = "Crear Curso";
}

<div class="container mt-4" >

<h1>Crear Curso</h1>

<form asp-action="GuardarCurso" method="post" style="height: 100vh;">
    <div class="form-group">
        <label for="idProfesor">ID Profesor</label>
        <select name="idProfesor" class="form-control">
          @foreach (var profesor in ViewBag.Profesores)
            {
                <option value="@profesor.idProfesor">@profesor.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="" required />
    </div>
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="text" class="form-control" id="Precio" name="Precio" value=""  required />
    </div>
    <div class="form-group">
        <label for="MetodoPago">Método de Pago</label>
        <select class="form-control" id="MetodoPago" name="MetodoPago" required>
            <option value="Gratis" >Gratis</option>
            <option value="Pago">Pago</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Materia">Materia</label>
        <input type="text" class="form-control" id="Materia" name="Materia" value="" required />
    </div>
    <div class="form-group">
        <label for="AnioSecundaria">Año Secundaria</label>
        <input type="number" class="form-control" id="AnioSecundaria" name="AnioSecundaria" value="" required />
    </div>
    <div class="form-group">
        <label for="Valoracion">Valoración</label>
        <input type="text" class="form-control" id="Valoracion" name="Valoracion" value=""  required />
    </div>
    <div class="form-group">
        <label for="cantAlumnos">Cantidad de Alumnos</label>
        <input type="number" class="form-control" id="cantAlumnos" name="cantAlumnos" value="" required />
    </div>
    <div class="form-group">
        <label for="fotoCurso">Foto del Curso (URL)</label>
        <input type="text" class="form-control" id="fotoCurso" name="fotoCurso" value="" required />
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <textarea class="form-control" id="Descripcion" name="Descripcion" rows="3" required></textarea>
    </div>
    <div class="form-group">
        <label for="videoCurso">Video del Curso (URL)</label>
        <input type="text" class="form-control" id="videoCurso" name="videoCurso" value="" required />
    </div>
    <button type="submit" class="btn btn-primary mt-5">Guardar Cambios</button>
    <a asp-action="Admin" class="btn btn-secondary mt-5">Cancelar</a>
</form>

</div>
