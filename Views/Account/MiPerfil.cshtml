@{
    ViewData["Title"] = "MiPerfil";
    var usuario = ViewBag.Usuario;
}
<div class="profile-container">
    <div class="profile-header">
        <h2>Mi Perfil</h2>
    </div>
    
    <!-- Sección izquierda: Foto y botón editar -->
    <div class="perfil-foto">
        <img src="@usuario.fotoPerfil" alt="Foto de perfil" class="foto-usuario" />
        <button id="editar-btn">Editar</button>
    </div>

    <!-- Sección derecha: Datos del usuario -->
    <div class="perfil-datos">
        <form id="perfil-form">
            <!-- Nombre -->
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" value="@usuario.Nombre" required />


            <!-- Descripción -->
            <label for="descripcion">Descripción</label>
            <textarea id="descripcion" name="descripcion" rows="4">@usuario.Descripcion</textarea>
        </form>
    </div>
</div>
