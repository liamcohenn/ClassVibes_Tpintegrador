@model Usuario
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-4">
    <div class="card shadow p-4" style="border: 2px solid #007bff;">
        <h2 class="text-primary">Mi Perfil</h2>

        <div class="row mt-4">
            <div class="col-md-4 text-center">
                <img src="@Model.fotoPerfil" class="rounded-circle img-fluid" style="width: 200px; height: 200px; object-fit: cover;" />
                <br />
                <a class="btn btn-outline-dark mt-2" href="/Cuenta/EditarPerfil">Editar</a>
            </div>

            <div class="col-md-8">
                <div class="mb-3">
                    <label class="form-label fw-bold">Fecha de nacimiento</label>
                    <div class="d-flex gap-2">
                        <input type="text" class="form-control" readonly value="@Model.fechaNacimiento.Day" style="max-width: 80px;" />
                        <input type="text" class="form-control" readonly value="@Model.fechaNacimiento.Month" style="max-width: 80px;" />
                        <input type="text" class="form-control" readonly value="@Model.fechaNacimiento.Year" style="max-width: 100px;" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre</label>
                    <input type="text" class="form-control" readonly value="@Model.Nombre" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Género</label>
                    <input type="text" class="form-control" readonly value="@Model.Genero" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción</label>
                    <input type="text" class="form-control" readonly value="Alumno de @Model.AnioSecundaria° año - Tel: @Model.Telefono - Email: @Model.Email" />
                </div>
            </div>
        </div>
    </div>
</div>
